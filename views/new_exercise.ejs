<h1>Create an Exercise</h1>

<form action="/exercises" method="post">
  <label for="">Exercise</label>
  <input type="text" name="title" />
  <label for="">Weight</label>
  <input type="number" name="weight" min="0" max="300"/>
  <label for="">Sets</label>
  <input type="number" name="sets" min="1" max="300"/>
  <label for="">Reps</label>
  <input type="number" name="reps" min="1" max="100"/>
  <label for="">Rest Timer</label>
  <input type="number" name="rest" min="0" max="300"/>
  <button>Add</button>
</form>