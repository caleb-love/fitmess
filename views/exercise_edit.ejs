<h1>Edit Exercise</h1>

<form class="edit_ex" action="/exercises/<%= exercise.exercise_id %>" method="post">
  <input type="hidden" name="_method" value="put" />

  <label for="">Exercise</label>
  <input type="text" name="title" value="<%= exercise.exercise_title %>" />

  <label for="">Weight</label>
  <input type="number" name="weight" min="0" max="300" value="<%= exercise.weight %>"/>

  <label for="">Sets</label>
  <input type="number" name="sets" min="1" max="30" value="<%= exercise.sets %>"/>

  <label for="">Reps</label>
  <input type="number" name="reps" min="1" max="100" value="<%= exercise.reps %>"/>

  <label for="">Rest Timer</label>
  <input type="number" name="rest" min="0" max="300" value="<%= exercise.rest %>"/>

  <button>update</button>
</form>
